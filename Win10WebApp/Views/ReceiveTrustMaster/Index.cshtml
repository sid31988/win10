        <span class="editor_edit"><a href="#" data-key="[key]" class="btn-success btn-sm">Edit</a></span>  |  <span class="editor_delete"><a href="#" data-key="[key]" class="btn-danger btn-sm">Delete</a></span>
    </script>*@
<script type="text/javascript">
    var receiveTrustMasterPage = new page.tcMaster.ReceiveTrust("#receiveTrustMasterRoot", {
        tableSelector: "#receiveTrustTable",
        tableSettings: {
            commandDisplay: component.DataTable.CommandDisplayTypes.external,
            dateFormat: "MM-dd-yyyy",
            tableSettings: {
                columns: [
                    { data: "Date", render: "renderDate" },
                    { data: "Issuer" },
                    { data: "Curr" },
                    { data: "Prefix" },
                    { data: "StartNo" },
                    { data: "Nos" },
                    { data: "EndNo" },
                    { data: "Deno" },
                    { data: "Value" }
                ],
                ajax: "@Url.Action("Find")",
                select: true
            }
        },
        detailsPanelSelector: "#divAddEdit",
        formSelector: "#formAddEdit",
        formSettings: { },
        commandSelector: "#divAddEdit div.form-inline",
        commandSettings: {
            addCommandButtonSelector: "button.editor_add",
            editCommandButtonSelector: "button.editor_edit",
            deleteCommandButtonSelector: "button.editor_delete",
            saveCommandButtonSelector: "button.editor_save",
            cancelCommandButtonSelector: "button.editor_cancel"
        },
        addUrl: "@Url.Action("Add")",
        editUrl: "@Url.Action("Edit")/[Id]",
        deleteUrl: "@Url.Action("Delete")/[Id]",
        saveUrl: "@Url.Action("Save")",
        addEditCommandGroupSelector: "#formAddEdit div.form-inline div.add-group"
    });
    receiveTrustMasterPage.initialize();
</script>