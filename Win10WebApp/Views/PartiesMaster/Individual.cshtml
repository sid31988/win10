            //var hiddenFields = ["Name","City"]
            var AdditionalData = [];

            $(preIndex + " .elementInput").each(function () {
                IndividualArr[$(this).data('columnname')] = $(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val();
            });

            $(preIndex + " .elementAddInput").each(function () {
                if ($(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val() != null
                    && $(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val().trim() != "") {
                    var newObj = {};
                    newObj["Table"] = "PartyMasters";
                    newObj["Column"] = $(this).data('columnname');
                    newObj["Value"] = $(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val();
                    AdditionalData.push(newObj);
                }
            });

            IndividualArr["AdditionalData"] = AdditionalData;


            IndividualArr['Type'] = 'I';

            if ($(this).data("acttype") == 'save') {
                addDataToTable(IndividualArr, "PartiesMaster/SavePartiesMaster", 'individualTable', 'POST', '#left-panel', individualTable, hiddenFields, false);
            }
            else {
                var trid = $(preIndex + " .selected-column").data("trid");
                //editDataToTable(IndividualArr, "PartiesMaster/EditPartiesMaster", 'individualTable', 'POST', trid, '#left-panel', individualTable, hiddenFields);
                editDataOfTable(IndividualArr, "PartiesMaster/EditPartiesMaster", 'individualTable', 'POST', individualTable, "");
            }

        });
        $(preIndex + ' .del-btn').click(function () {
            var ChildData = $(preIndex + " .selected-column").data('childdata');
            ChildData["IsDeleted"] = true;
            var trid = $(preIndex + " .selected-column").data("trid");
            deleteDataToTable(ChildData, "PartiesMaster/EditPartiesMaster", 'individualTable', 'POST', trid, '#left-panel', individualTable);
        });
</script>

