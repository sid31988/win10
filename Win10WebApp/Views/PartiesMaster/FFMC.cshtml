        var hiddenFields = ["Type", "Name", "Address1", "Address2", "Address3", "City", "Pincode", "State", "Country", "Nationality", "Residency", "Contactperson1", "Tel1", "Email1", "Primaryid", "Panno", "Aadharno", "Gst", "Mobile", "OpeningBalance", "BalancePost", "AddressInBill", "Lock", "Category", "Broker", "Location", "CollectGST", "RBILICNo", "RBIExp", "ControlAC"];
        var AdditionalData = [];

        $(preIndex + " .elementInput").each(function () {
            FFMCsArr[$(this).data('columnname')] = $(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val();
        });

        $(preIndex + " .elementAddInput").each(function () {
            if ($(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val() != null
                && $(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val().trim() != "") {
                var newObj = {};
                newObj["Table"] = "PartyMasters";
                newObj["Column"] = $(this).data('columnname');
                if ($(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').prop("checked") == true)
                    newObj["Value"] = 'true';
                else
                    newObj["Value"] = 'false';
                AdditionalData.push(newObj);
            }
        });

        FFMCsArr["AdditionalData"] = AdditionalData;

        FFMCsArr['Type'] = 'M';

        if ($(this).data("acttype") == 'save') {
            addDataToTable(FFMCsArr, "PartiesMaster/SavePartiesMaster", 'FFMCTable', 'POST', '#left-panel', FFMCTable, hiddenFields, false);
        }
        else {
            //var trid = $(preIndex + " .selected-column").data("trid");
            //editDataToTable(FFMCsArr, "PartiesMaster/EditPartiesMaster", 'FFMCTable', 'POST', trid, '#left-panel', FFMCTable, hiddenFields);
            editDataOfTable(CorporateArr, "PartiesMaster/EditPartiesMaster", 'FFMCTable', 'POST', FFMCTable, "");
        }

    });

    $(preIndex + ' .del-btn').click(function () {
        var ChildData = $(preIndex + " .selected-column").data('childdata');
        ChildData["IsDeleted"] = true;
        var trid = $(preIndex + " .selected-column").data("trid");
        deleteDataToTable(ChildData, "PartiesMaster/EditPartiesMaster", 'FFMCTable', 'POST', trid, '#left-panel', FFMCTable);
    });

    $(document).on('click', '.tbl-row', function () {
        $(preIndex + " .elementAddInput").each(function () {
            if ($(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').attr('type') == "checkbox") {
                if ($(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val() == 'true')
                    $(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').prop("checked", true);
            }
        });
    });
</script>


