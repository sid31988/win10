@model IEnumerable<Win10WebApp.Models.PartyMaster>
@{
    Layout = null;
}
<div class="row" id="@Win10WebApp.Utility.Constants.MODULES["BRANCHES"]">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                Branches
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-5">

                        <table class="table" id="branchesTable">
                            <thead>
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.City)
                                    </th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr class="tbl-row" data-trid="tr_@item.Id" data-childdata="@Json.Encode(item)" data-actpanel="#left-panel">


                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>


                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-sm-6" id="left-panel">
                        <div class="portlet light ">
                            <div class="portlet-body form">
                                <div class="panel-group accordion" id="branchaccordion">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#branchaccordion" href="#branchcollapse_1"> General Details </a>
                                            </h4>
                                        </div>
                                        <div id="branchcollapse_1" class="panel-collapse in">
                                            <div class="panel-body floating-form">
                                                <div class="row">

                                                    <div class="col-md-12">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="NAME"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Name</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group floating-label">
                                                            <select class="form-control form-control-sm floating-select elementInput"
                                                                    data-columnname="CONTROLAC" onclick="this.setAttribute('value', this.value);"
                                                                    onchange="this.setAttribute('value', this.value);" value="">
                                                                <option></option>
                                                                <option>SUNDRY DEBTORS A/C</option>
                                                            </select>
                                                            <span class="highlight"></span>
                                                            <label>Control A/C</label>

                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#branchaccordion" href="#branchcollapse_2"> Contact Details </a>
                                            </h4>
                                        </div>
                                        <div id="branchcollapse_2" class="panel-collapse">
                                            <div class="panel-body floating-form">
                                                <div class="row">

                                                    <div class="col-md-12">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="ADDRESS1"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Address Line</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="ADDRESS2"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Address Line </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="ADDRESS3"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Address Line </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="CITY"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>City </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="PINCODE"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Pincode </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <select class="form-control form-control-sm floating-select elementInput" data-columnname="STATE" onclick="this.setAttribute('value', this.value);" value="">
                                                                <option></option>
                                                                <option>MAHARASHTRA</option>

                                                            </select>
                                                            <span class="highlight"></span>
                                                            <label>State</label>

                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <select class="form-control form-control-sm floating-select elementInput" data-columnname="COUNTRY" onclick="this.setAttribute('value', this.value);" value="">
                                                                <option></option>
                                                                <option>India</option>

                                                            </select>
                                                            <span class="highlight"></span>
                                                            <label>Country</label>

                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="TEL1"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Telephone</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="MOBILE"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Mobile</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="EMAIL1"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Email</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#branchaccordion" href="#branchcollapse_3"> Setup Details </a>
                                            </h4>
                                        </div>
                                        <div id="branchcollapse_3" class="panel-collapse">
                                            <div class="panel-body floating-form">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="PANNO"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Pancard No.</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="GST"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>GSTIN</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="OPENINGBALANCE"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>Opening Balance</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-group floating-label">
                                                            <select class="form-control form-control-sm floating-select elementInput"
                                                                    data-columnname="BALANCEPOST" onclick="this.setAttribute('value', this.value);"
                                                                    value="Dr">

                                                                <option>Dr</option>
                                                                <option>Cr</option>
                                                            </select>
                                                            <span class="highlight"></span>
                                                            <label>&nbsp;</label>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-5">
                                                        <div class="form-group floating-label">
                                                            <select class="form-control form-control-sm floating-select elementInput" data-columnname="LOCK" onclick="this.setAttribute('value', this.value);" value="">
                                                                <option></option>
                                                                <option>Y</option>
                                                                <option>N</option>
                                                            </select>
                                                            <span class="highlight"></span>
                                                            <label>Lock</label>
                                                        </div>
                                                    </div>
                                                    @*Ajith : Begin*@
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="RBILICNO"
                                                                   type="text" placeholder=" " disabled>
                                                            <span class="highlight"></span>
                                                            <label>RBI Lic #</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group floating-label">
                                                            <input class="form-control floating-input elementInput" data-columnname="RBIEXP"
                                                                   type="text" placeholder=" " onclick="(this.type='date')" disabled>
                                                            <span class="highlight"></span>
                                                            <label>Exp</label>
                                                        </div>
                                                    </div>
                                                    @*Ajith : End*@

                                                    <div class="col-md-12">
                                                        <div class="form-group floating-label">
                                                            <select class="form-control form-control-sm floating-select elementInput" data-columnname="LOCATION" onclick="this.setAttribute('value', this.value);" value="">
                                                                <option></option>
                                                                <option>Demo City</option>
                                                            </select>
                                                            <span class="highlight"></span>
                                                            <label>Location</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <div class="form-actions">
                            <button type="button" class="btn btn-primary left-panelbtn add-btn" data-actpanel="#left-panel">Add</button>
                            <button type="button" class="btn btn-warning left-panelbtn edit-btn" data-actpanel="#left-panel">Edit</button>
                            <button type="button" class="btn btn-danger left-panelbtn del-btn">Delete</button>
                            <div class="add-group" style="display: none">
                                <button type="button" class="btn btn-success left-panelbtn save-btn" data-actpanel="#left-panel" id="btnSaveAct">Save</button>
                                <button type="button" class="btn btn-info left-panelbtn cancel-btn" data-actpanel="#left-panel">Cancel</button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    freezePanel('#left-panel');
    var branchTable = $('#branchesTable').DataTable();

    $(preIndex + ' #btnSaveAct').click(function () {
        var BranchesArr = {}
        //var hiddenFields = ["Id", "AFType", "RBI", "Rate", "Position"];
        var hiddenFields = ["Type", "Name", "Address1", "Address2", "Address3", "City", "Pincode", "State", "Country", "Nationality", "Residency", "Contactperson1", "Tel1", "Email1", "Primaryid", "Panno", "Aadharno", "Gst", "Mobile", "OpeningBalance", "BalancePost", "AddressInBill", "Lock", "Category", "Broker", "Location", "CollectGST", "RBILICNo", "RBIExp", "ControlAC"];
        $(preIndex + " .elementInput").each(function () {
            BranchesArr[$(this).data('columnname')] = $(preIndex + ' [data-columnname="' + $(this).data('columnname') + '"]').val();
        });
        BranchesArr['Type'] = 'B';
        if ($(this).data("acttype") == 'save') {
            addDataToTable(BranchesArr, "PartiesMaster/SavePartiesMaster", 'branchTable', 'POST', '#left-panel', branchTable, hiddenFields, false);
        }
        else {
            //var trid = $(preIndex + " .selected-column").data("trid");
            //editDataToTable(BranchesArr, "PartiesMaster/EditPartiesMaster", 'branchTable', 'POST', trid, '#left-panel', branchTable, hiddenFields);
            editDataOfTable(CorporateArr, "PartiesMaster/EditPartiesMaster", 'branchTable', 'POST', branchTable, "");
        }

    });

    $(preIndex + ' .del-btn').click(function () {
        var ChildData = $(preIndex + " .selected-column").data('childdata');
        ChildData["IsDeleted"] = true;
        var trid = $(preIndex + " .selected-column").data("trid");
        deleteDataToTable(ChildData, "PartiesMaster/EditPartiesMaster", 'branchTable', 'POST', trid, '#left-panel', branchTable);
    });
</script>


