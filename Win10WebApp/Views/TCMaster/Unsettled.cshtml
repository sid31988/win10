@model Win10WebApp.Models.TCMasterViewModel
@{
    Layout = null;
}

@if (Model.TCMaster != null)
{
    <div class="portlet light ">
        <div class="portlet-body form">
            <div class="panel-group accordion" id="unsettled">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#unsettled" href="#unsettled_form"> Details </a>
                        </h4>
                    </div>
                    <div id="unsettled_form" class="panel-collapse in">
                        <div class="panel-body floating-form">


                            <input type="text" name="Id" value="@Model.TCMaster.Id" style="display: none;" />
                            <input type="text" name="Type" value="@Model.TCMaster.Type" style="display: none;" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="date" name="date" value="@Model.TCMaster.Date"
                                               type="text" placeholder=" " onclick="(this.type='date')">
                                        <span class="highlight"></span>
                                        <label>Date</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="issuer" name="issuer" value="@Model.TCMaster.Issuer"
                                               type="text" placeholder=" ">
                                        <span class="highlight"></span>
                                        <label>Issuer</label>

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="curr" name="curr" value="@Model.TCMaster.Curr"
                                               type="text" placeholder=" ">
                                        <span class="highlight"></span>
                                        <label>Curr</label>

                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="prefix" name="prefix" value="@Model.TCMaster.Prefix"
                                               type="text" placeholder=" ">
                                        <span class="highlight"></span>
                                        <label>Prefix</label>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="startno" name="startno" value="@Model.TCMaster.StartNo"
                                               type="text" placeholder=" " onclick="(this.type='number')">
                                        <span class="highlight"></span>
                                        <label>Start No.</label>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="nos" name="nos" value="@Model.TCMaster.Nos"
                                               type="text" placeholder=" " onclick="(this.type='number')">
                                        <span class="highlight"></span>
                                        <label>Nos.</label>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="endno" name="endno" value="@Model.TCMaster.EndNo"
                                               type="text" placeholder=" " onclick="(this.type='number')">
                                        <span class="highlight"></span>
                                        <label>End No.</label>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="deno" name="deno" value="@Model.TCMaster.Deno"
                                               type="text" placeholder=" " onclick="(this.type='number')">
                                        <span class="highlight"></span>
                                        <label>Deno</label>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group floating-label">
                                        <input class="form-control floating-input elementInput" id="value" name="value" value="@Model.TCMaster.Value"
                                               type="text" placeholder=" " onclick="(this.type='number')">
                                        <span class="highlight"></span>
                                        <label>Value</label>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
}
else
{
    <div class="row" id="@Win10WebApp.Utility.Constants.MODULES["UNSETTLED"]">
        <div class="col-md-14">
            <div class="panel panel-info">
                <div class="panel-heading">
                    unsettled T.C
                </div>
                <div class="panel-body">
                    <div id="unsettledMasterRoot" class="row page-root" data-mode="view">

                        <!--View Design-->
                        <div id="divDatatable" class="col-sm-8 grid-control">
                            <table class="table display dataTable compact" id="unsettledTable">
                                <thead>
                                    <tr>
                                        <th>
                                            Date
                                        </th>
                                        <th>
                                            Issuer
                                        </th>
                                        <th>
                                            Curr
                                        </th>
                                        <th>
                                            Prefix
                                        </th>
                                        <th>
                                            Start No
                                        </th>
                                       
                                    </tr>
                                </thead>
                            </table>
                        </div>

                        <!--Details Design-->
                        <div class="details-panel editor-control col-sm-4">
                            <form class="form-add-edit"></form>
                            <div class="command-panel form-actions">
                                <div class="form-group col-sm-offset-1">
                                    <button type="button" class="btn btn-primary editor_add" id="btnAddAct">Add</button>
                                    <button type="button" class="btn btn-warning editor_edit" id="btnEditAct">Edit</button>
                                    <button type="button" class="btn btn-danger editor_delete" id="btnDeleteAct">Delete</button>
                                    <div class="add-group">
                                        <button type="button" class="btn btn-success  editor_save" id="btnSaveAct">Save</button>
                                        <button type="button" class="btn btn-info  editor_cancel" id="btnCancelAct">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var unsettledMasterPage = new page.tcMaster.Unsettled("#unsettledMasterRoot", {
            tableSelector: "#unsettledTable",
            tableSettings: {
                commandDisplay: component.DataTable.CommandDisplayTypes.external,
                dateFormat: "MM-dd-yyyy",
                tableSettings: {
                    columns: [
                        { data: "Date", render: "renderDate" },
                        { data: "Issuer" },
                        { data: "Curr" },
                        { data: "Prefix" },
                        { data: "StartNo" }
                    ],
                    ajax: "@Url.Action("Find")?tcMasterType=Unsettled",
                    select: true
                }
            },
            detailsPanelSelector: "#unsettledMasterRoot .details-panel",
            formSelector: "#unsettledMasterRoot .form-add-edit",
            formSettings: { },
            commandSelector: "#unsettledMasterRoot .command-panel",
            commandSettings: {
                addCommandButtonSelector: "button.editor_add",
                editCommandButtonSelector: "button.editor_edit",
                deleteCommandButtonSelector: "button.editor_delete",
                saveCommandButtonSelector: "button.editor_save",
                cancelCommandButtonSelector: "button.editor_cancel"
            },
            addUrl: "@Url.Action("Add")?tcMasterType=Unsettled",
            editUrl: "@Url.Action("Edit")?tcMasterType=Unsettled&Id=[Id]",
            deleteUrl: "@Url.Action("Delete")/[Id]",
            saveUrl: "@Url.Action("Save")?tcMasterType=Unsettled",
            addEditCommandGroupSelector: "#formAddEdit div.form-inline div.add-group"
        });
        unsettledMasterPage.initialize();
    </script>
}